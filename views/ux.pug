block content
    nav.navbar.navbar-default.navbar-fixed-top.navbar-board
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#')
                    svg#hamburguer(xmlns='http://www.w3.org/2000/svg', width='30', height='30', viewbox='0 0 30 30')
                        path.line.line-top(d='M0,9h30')
                        path.line.line-center(d='M0,15h30')
                        path.line.line-bottom(d='M0,21h30')
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='#', class='make-publication') Hacer publicacion
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            i.fa.fa-bell(aria-hidden='true')
                        ul.dropdown-menu
                            li
                                a(href='#') Action
                            li
                                a(href='#') Another action
                            li
                                a(href='#') Something else here
                            li.divider(role='separator')
                            li.dropdown-header Nav header
                            li
                                a(href='#') Separated link
                            li
                                a(href='#') One more separated link
                    li
                        a(href='z#')
                            i.fa.fa-home(aria-hidden='true')
    .home-page
        .img-container
            //img(src='/images/plaza.jpg', alt='Smiley face', height='100%', width='100%')
            .img-header
            .black-cover
                p(class="title-class") ULTIMAS PUBLICACIONES
        .cards.col-xs-12
            .card-container.col-md-4
                .card-rect.col-xs-12
                    .header.col-xs-12
                        label Chihuahua
                        label.pull-right 11/05/1970
                    .img-card
                        img(src='/images/plaza.jpg', height='100%', width='100%')
                    .info-container
                        label(class="title-card") La Triple Alianza y los señorios independientes
                        p(class="info-card") La triple alianza fueron formados por Tenochtitlan, Tlacopan y Texcoco. Formaron la útima confederación ubicados en el valle de México.
                        .col-xs-12.user-autor
                            .perfil-img
                                img(src='/images/plaza.jpg', height='100%', width='100%')
                            p.col-xs-12.p-name Ararat Mendez
                            p.col-xs-12.p-date 14/01/2017
