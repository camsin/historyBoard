doctype html
html(ng-app="historyBoardApp")
  head
    title historyBoard
    meta(id="viewport", name="viewport", content ="width=device-width")
    link(rel='shortcut icon', type='image/x-icon', href='/images/cactus.ico')
    link(rel='stylesheet', href='/stylesheets/lib/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/materialize.min.css')
    link(rel='stylesheet', href='/stylesheets/lib/tippy.css')
    link(rel='stylesheet', href='/stylesheets/css/style.css')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/angular-toastr@2/dist/angular-toastr.css")
  body
    if (showSideNav)
      nav.navbar.navbar-default.navbar-fixed-top.navbar-board(ng-controller="notificationController")
        .container-nav
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.button-collapse.navbar-brand.d-initial( )
              svg#hamburguer(xmlns='http://www.w3.org/2000/svg', width='30', height='30', viewbox='0 0 30 30',data-activates='slide-out')
                path.line.line-top(d='M0,9h30')
                path.line.line-center(d='M0,15h30')
                path.line.line-bottom(d='M0,21h30')
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/publications/new/publication', class='make-publication') Hacer publicacion
              li.dropdown.notifications
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  i.fa.fa-bell(aria-hidden='true')
                  .notifications-badge
                    p {{notifications.length}}
                ul.dropdown-menu
                  li.dropdown-header Notificaciones
                  li(ng-repeat="notification in notifications")
                    a(href='#!' ng-click="redirectPublication(notification._id,notification.comment.publication._id)")
                      p.name {{notification.comment.author.name}}
                      p.action-noti Comento '{{notification.comment.publication.title}}'
                  //li
                  //  a(href='#')
                  //    p.name Ararat Mendez
                  //    p.action-noti Comento 'La tripe alianza'
                  //li
                  //  a(href='#')
                  //    p.name Ararat Mendez
                  //    p.action-noti Comento 'La tripe alianza'
                  //li
                  //  a(href='#')
                  //    p.name Ararat Mendez
                  //    p.action-noti Comento 'La tripe alianza'
                  //li
                  //  a(href='#')
                  //    p.name Ararat Mendez
                  //    p.action-noti Comento 'La tripe alianza'
                  li.see-more
                    a(href='/notifications')
                      p Ver Mas
              li
                a(href='/publications/lastPublications')
                  i.fa.fa-home(aria-hidden='true')

          ul#slide-out.side-nav
            li
              .user-view
                .background
                  img(src='/images/sidenav-fondo.jpeg')
                a(href='/users/myProfile', class='')
                  img.circle(src=`/publications/getImages/${user.profilePicture}`)
                a(href='/users/myProfile', class='name-sidenav')
                  span.white-text.name #{user.name}
                a(href='/users/myProfile', class='perfil-boton')
                  span.white-text.button-perfil Ver mi perfil
              .black-capa

            li.sidenav-link
              a(href='/publications/myPublications')
                i.fa.fa-user(aria-hidden='true')
                | Mis Publicaciones
            li
              .divider.m-0
            li.sidenav-link

              a(href='/publications/new/publication')
                i.fa.fa-pencil-square-o(aria-hidden='true')
                | Hacer Publicación
            li
              .divider.m-0
            li.sidenav-link
              a(href='/publications/byDate')
                i.fa.fa-calendar(aria-hidden='true')
                | Buscar Año
            li
              .divider.m-0
            li.sidenav-link
              a(href='/publications/byState')
                i.fa.fa-globe(aria-hidden='true')
                | Mapa Interactivo
            li
              .divider.m-0
            li.sidenav-link
              a(href='/')
                i.fa.fa-power-off(aria-hidden='true')
                | Salir
    block content
    script(src='/javascripts/lib/jquery.min.js')
    script(src='/javascripts/lib/angular.min.js')
    script(src='/js/app.js')
    script(src='/javascripts/lib/bootstrap.min.js')
    script(src='/javascripts/lib/materialize.min.js')
    script(src='/javascripts/lib/tippy.min.js')
    script(src='/javascripts/functions.js')
    script(src="https://cdn.jsdelivr.net/npm/angular-toastr@2/dist/angular-toastr.tpls.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js")

