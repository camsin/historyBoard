extends ../layout

block content
  script.
      // injected constants
      var Constants = {
          userId: '#{user._id}'
      };
  .home-page.col-xs-12(ng-controller="lastPublicationsController" ng-init="init()")
    .img-container
      //img(src='/images/plaza.jpg', alt='Smiley face', height='100%', width='100%')
      .img-header
      .black-cover
        p(class="title-class") ULTIMAS PUBLICACIONES
    .cards.col-xs-12(ng-show="lastPublications.length > 0")
      .card-container.col-md-4(ng-repeat="publication in lastPublications track by publication._id")
        .card-rect.col-xs-12
          .header.col-xs-12
            label {{publication.state}}
            label.pull-right {{publication.date | date}}
          .img-card
            //aqui seria enviarlo mejor con angular
            a(href='/publications/byId/{{publication._id}}')

              img(ng-src='/publications/getImages/{{publication.imagePreview}}', height='100%')
              div(class='ref-link')
                .black-link
                  img(src='/images/logo.png', width='100%')
                  p Ver mas
          .info-container
            .like-btn
              div(class="")
                i.fa.fa-heart(aria-hidden='true')
                p(class='p-likes') 100 likes
            .comment-btn
              div(class="")
                i.fa.fa-comment(aria-hidden='true')
                p(class='p-likes') 100 comentarios
            label(class="title-card") {{publication.title}}
            p(class="info-card") {{publication.content}}
            .user-autor
              .perfil-img
                img(src='https://www.debate.com.mx/__export/1483142977600/sites/debate/img/2016/12/30/princess-leia.jpg_1810791533.jpg', height='100%', width='100%')
              p.col-xs-12.p-name {{publication.author.name}}
              p.col-xs-12.p-date 14/01/2017

    .col-xs-12.text-align-c(ng-show="lastPublications.length == 0")
      .empty-state-holder
        img(src='/images/pedroSad.png')
        p Achis achis los mariachis, esto esta mas vacío que un desierto!
        p puedes hacer
          a(href='/publications/nueva/1') clic aquí
          | para crear una nueva publicación
