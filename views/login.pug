extends layout

block content
  div(class="login-view col-xs-12")
    //video#background-video.video-esp(autoplay='', loop='')
        source(src="/images/video.mp4", type='video/mp4')
    div(class="dark-cover col-xs-12")
    div(class="col-md-4 col-xs-12 left-login")
      div(class="img-container col-xs-12")
        img(src="/images/logo.png")
      div(class="register-btn col-xs-12")
         a(href="#", class="btn-blue", data-toggle="modal", data-target=".register-modal") REGISTRATE
      div(class="col-xs-12")
          h1 ¿Ya tienes cuenta?
      div(class="register-btn col-xs-12")
        a(href="#", class="btn-white", data-toggle="modal", data-target=".login-modal") INICIA SESION
    div(class="col-md-8 col-xs-12 right-login")
      div(class="title-container")
        label(class="subtitle") MÉXICO
        label(class="title") HISTORY BOARD
        label(class="slogan") "Aprendamos del presente con nuestro pasado"
    .modal.fade.register-modal(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4#gridSystemModalLabel.modal-title REGISTRATE
                .modal-body.p-t-30
                    .body-message.col-xs-12
                        .col-xs-12.col-md-4.responsive-img-cactus
                            .text-align-c
                                img.max-w-230(src="/images/logo.png")
                            .col-xs-12
                                .col-xs-12
                                    p(class="social-register") O REGISTRATE CON
                                .col-xs-6.text-align-r
                                    a(href="/auth/facebook")
                                        img(src="/images/fb-icon.png", class="max-w-40")
                                //.col-xs-4
                                //    a(href="/auth/twitter")
                                //        img(src="/images/tw-icon.png")
                                .col-xs-6
                                    a(href="/auth/google")
                                        img(src="/images/gl-icon.png", class="max-w-40")
                        form.col-xs-12.col-md-8.material-input(method="POST" action="/registrar")
                            .input-field.col.s6
                                input#name(type='text' name="name")
                                label.active(for='name') Nombre
                            .input-field.col.s6
                                input#email(type='email', name="email")
                                label.active(for='email') Correo
                            .input-field.col.s6
                                input#password(type='password', name="password")
                                label.active(for='password') Contraseña
                            .input-field.col.s6
                                input#confirmPassword(type='password' name="confirmPassword")
                                label.active(for='confirmPassword') Confirmar contraseña

                            .col-xs-12.text-center
                                button.waves-effect.waves-light.btn(type="submit") CONTINUAR
    .modal.fade.login-modal(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4#gridSystemModalLabel.modal-title INICIA SESION
                .modal-body
                    .body-message.col-xs-12
                        .col-xs-12.col-md-4
                            img(src="/images/logo.png")
                            .col-xs-12
                                .col-xs-12
                                    p(class="social-register") O INICIA SESION CON
                                .col-xs-6.text-align-r
                                    a(href="/auth/facebook")
                                        img(src="/images/fb-icon.png", class="max-w-40")
                                //.col-xs-4
                                //    a(href="#")
                                //        img(src="/images/tw-icon.png")
                                .col-xs-6
                                    a(href="/auth/google")
                                        img(src="/images/gl-icon.png", class="max-w-40")
                        form.col-xs-12.col-md-8.material-input(method="POST" action="/login")
                            .input-field.col.s6
                                input#email(type='text' name="email")
                                label.active(for='name') Correo
                            .input-field.col.s6
                                input#password(type='text' name="password")
                                label.active(for='password') Contraseña
                            .col-xs-12.text-center
                                button.btn.btn-primary(type="submit") CONTINUAR
